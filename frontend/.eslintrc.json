{
  "extends": ["react-app"],
  "plugins": ["react", "unused-imports"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      }
    },
    {
      "files": ["cypress/**/*.js"],
      "env": {
        "node": true
      },
      "plugins": ["cypress"],
      "globals": {
        "cy": "readonly",
        "Cypress": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "before": "readonly",
        "after": "readonly",
        "expect": "readonly"
      }
    }
  ]
}
