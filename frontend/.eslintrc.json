{
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "requireConfigFile": false
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": ["react", "prettier", "unused-imports"],
    "rules": {
      "unused-imports/no-unused-imports": "error",
      "no-unused-vars": "warn",
      "prettier/prettier": "warn"
    }
  }
  